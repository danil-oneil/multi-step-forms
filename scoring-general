      });
    $('[bloc=next-tab]').on('click',function() {
  if($('.w--tab-active').attr('data-w-tab')=='CONTACTS') {
          $('[bloc=step-buttons]').css({
      'display':'none'+' ',
    });

      }});
$('[bloc=prev-tab]').on('click',function() {
  if($('.w--tab-active').attr('data-w-tab')=='SELECTBOX_2') {
          $('[bloc=step-buttons]').css({
      'display':'flex'+' ',
    });

      }});
